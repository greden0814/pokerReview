<view class="flopPage"><view class="flopCards"><view>设置翻牌：</view><block wx:for="{{cards}}" wx:for-item="card" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['setCard',[index]]]]]}}" class="card" bindtap="__e">{{''+cardTypes[cards[index].type]+cards[index].num+''}}</view></block></view><view class="steps"><block wx:for="{{steps}}" wx:for-item="step" wx:for-index="sidx" wx:key="sidx"><view><view class="label">{{'player '+step.player+''}}</view><view class="choiceGroup"><block wx:for="{{stepChoices}}" wx:for-item="choice" wx:for-index="cidx" wx:key="cidx"><button data-event-opts="{{[['tap',[['choiceChange',['$0',cidx,sidx],[[['steps','',sidx]]]]]]]}}" class="{{['choiceStyle',(cidx===step.choice)?'btnPrimary':'']}}" bindtap="__e">{{choice}}</button></block><input class="bidInput" disabled="{{step.choice!==2}}" placeholder="下注金额" data-event-opts="{{[['input',[['__set_model',['$0','bid','$event',[]],[[['steps','',sidx]]]]]]]}}" value="{{step.bid}}" bindinput="__e"/></view></view></block></view><view hidden="{{!(typeListVisible)}}" class="cardTypeChosen"><block wx:for="{{[0,1,2,3]}}" wx:for-item="item" wx:for-index="__i0__" wx:key="*this"><cover-image class="cardType" src="{{'../../static/image/'+item+'.png'}}" data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" data-event-params="{{({item})}}" bindtap="__e"></cover-image></block></view><view hidden="{{!(numListVisible)}}" class="cardNumChosen"><block wx:for="{{cardNum}}" wx:for-item="num" wx:for-index="__i1__" wx:key="*this"><view data-event-opts="{{[['tap',[['choseNum',['$0'],[[['cardNum','',__i1__]]]]]]]}}" class="{{['cardNum','cardNum'+num]}}" bindtap="__e">{{num}}</view></block></view><view class="operationBar"><button data-event-opts="{{[['tap',[['goTurn',['$event']]]]]}}" bindtap="__e">设置转牌</button></view></view>