<view class="gameDetails"><view class="table" style="{{('height:'+windowHeight+'px;width:'+screenWidth+'px')}}"><block wx:for="{{players}}" wx:for-item="seat" wx:for-index="__i0__" wx:key="seat"><view class="{{['seat','seat'+seat.seat]}}"><view class="cards"><view class="card">{{cardType[seat.card[0].type]+seat.card[0].num}}</view><view class="card">{{cardType[seat.card[1].type]+seat.card[1].num}}</view></view><view class="chips">{{seat.chip}}</view><block wx:if="{{seat.seat==bbseat}}"><view class="isBB">bb</view></block></view></block><view class="currentOperation">{{''+currentOperation+''}}</view></view><view class="operationBar"><view class="btnList"><button data-event-opts="{{[['tap',[['checkMoves',['$event']]]]]}}" bindtap="__e">查看进度</button><button data-event-opts="{{[['tap',[['stepBack',['$event']]]]]}}" bindtap="__e">后退</button><button data-event-opts="{{[['tap',[['stepForward',['$event']]]]]}}" bindtap="__e">前进</button></view></view></view>