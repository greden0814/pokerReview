.gameDetails {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.gameDetails .table {
  height: 674px;
  background-image: url(data:image/png;base64,);
}
.gameDetails .table .currentOperation {
  position: absolute;
  left: 50%;
  top: 40%;
}
.gameDetails .table .seat {
  width: 80px;
  height: 60px;
  position: absolute;
}
.gameDetails .table .seat .cards {
  border: 1px solid #ccc;
  display: flex;
}
.gameDetails .table .seat0 {
  left: calc(50% - 40px);
  top: 20px;
}
.gameDetails .table .seat1 {
  right: 5px;
  top: 180px;
}
.gameDetails .table .seat2 {
  right: 5px;
  top: 300px;
}
.gameDetails .table .seat3 {
  right: 5px;
  top: 420px;
}
.gameDetails .operationBar .btnList {
  display: flex;
}

