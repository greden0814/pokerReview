.addNewGame {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.addNewGame .table {
  background-image: url(data:image/png;base64,);
  background-size: cover;
  background-repeat: no-repeat;
}
.addNewGame .table .seat {
  height: 70rpx;
  position: absolute;
}
.addNewGame .table .seat .cards {
  display: flex;
  height: 50rpx;
}
.addNewGame .table .seat .cards .card {
  border: 1px solid #000;
  width: 35rpx;
  margin-right: 3rpx;
}
.addNewGame .table .seat .chips {
  width: 73rpx;
  font-size: 12rpx;
}
.addNewGame .table .seat0 {
  left: 28%;
  top: 20rpx;
}
.addNewGame .table .seat1 {
  right: 37%;
  top: 20rpx;
}
.addNewGame .table .seat2 {
  right: 13%;
  top: 50rpx;
}
.addNewGame .table .seat3 {
  right: 13%;
  bottom: 20rpx;
}
.addNewGame .table .seat4 {
  right: 30%;
  bottom: 6rpx;
}
.addNewGame .table .seat5 {
  left: 43%;
  bottom: 6rpx;
}
.addNewGame .table .seat6 {
  left: 25%;
  bottom: 6rpx;
}
.addNewGame .table .seat7 {
  left: 8%;
  bottom: 20rpx;
}
.addNewGame .table .seat8 {
  left: 8%;
  top: 50rpx;
}
.addNewGame .cardTypeChosen {
  position: absolute;
  display: flex;
  width: 400rpx;
  height: 80rpx;
  left: 20%;
  flex-wrap: wrap;
  top: 37%;
}
.addNewGame .cardTypeChosen .cardType {
  flex: 1;
  margin: 10px;
}
.addNewGame .cardNumChosen {
  position: absolute;
  display: flex;
  width: 400px;
  height: 144px;
  left: calc(50% - 208px);
  flex-wrap: wrap;
  top: calc(50% - 60px);
}
.addNewGame .cardNumChosen .cardNum {
  width: 40px;
  height: 55px;
  margin: 5px;
  text-align: center;
  line-height: 60px;
  border: 1px solid #000;
}
.addNewGame .cardNumChosen .cardNum8 {
  margin-left: 30px;
}
.addNewGame .cardNumChosen .exiled {
  border: none;
  color: transparent;
  cursor: default;
}
.addNewGame .operationBar {
  position: absolute;
  right: 10px;
  top: 43%;
}
.addNewGame .operationBar button {
  font-size: 12px;
}

