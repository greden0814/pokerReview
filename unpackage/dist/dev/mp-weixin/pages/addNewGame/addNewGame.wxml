<view class="addNewGame"><view class="table"><block wx:for="{{players}}" wx:for-item="player" wx:for-index="__i0__" wx:key="seat"><view class="{{['seat','seat'+player.seat]}}"><view class="cards"><view data-event-opts="{{[['tap',[['setCard',['$0',0],[[['players','seat',player.seat,'seat']]]]]]]}}" class="card" bindtap="__e">{{cardTypes[player.card[0].type]+player.card[0].num}}</view><view data-event-opts="{{[['tap',[['setCard',['$0',1],[[['players','seat',player.seat,'seat']]]]]]]}}" class="card" bindtap="__e">{{cardTypes[player.card[1].type]+player.card[1].num}}</view></view><input type="number" placeholder="筹码数量" maxlength="8" data-event-opts="{{[['input',[['__set_model',['$0','chip','$event',[]],[[['players','seat',player.seat]]]]]]]}}" value="{{player.chip}}" bindinput="__e"/><block wx:if="{{player.seat==bbseat}}"><view class="isBB">bb</view></block></view></block></view><view hidden="{{!(typeListVisible)}}" class="cardTypeChosen"><block wx:for="{{[0,1,2,3]}}" wx:for-item="item" wx:for-index="__i1__" wx:key="*this"><cover-image class="cardType" src="{{'../../static/image/'+item+'.png'}}" data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" data-event-params="{{({item})}}" bindtap="__e"></cover-image></block></view><view hidden="{{!(numListVisible)}}" class="cardNumChosen"><block wx:for="{{cardNumList}}" wx:for-item="card" wx:for-index="__i2__" wx:key="num"><view data-event-opts="{{[['tap',[['choseNum',['$0','$1'],[[['cardNumList','num',card.num,'num']],[['cardNumList','num',card.num,'exile']]]]]]]}}" class="{{['cardNum','cardNum'+card.num+card.exile]}}" bindtap="__e">{{card.num}}</view></block></view><view class="operationBar"><button plain="{{true}}" data-event-opts="{{[['tap',[['checkMoves',['$event']]]]]}}" bindtap="__e">查看记录</button><view hidden="{{!(notFinish)}}" style="color:red;font-size:12px;">{{''+warningMsg+''}}</view></view></view>